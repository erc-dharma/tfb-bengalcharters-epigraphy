                     <l n="d"><lb n="5" break="no"/>-kalpa-drumo śohuṇa-bhūmi-pālaḥ<g type="ddanda">.</g></l>
                 </lg>
                 <lg n="4" met="upajāti">
                     <l n="a">tasyātmajaḥ śastra-bhr̥<supplied reason="lost">tāṁ</supplied> vi<seg met="+="><gap reason="lost" unit="character" quantity="2"/></seg></l>
                     <l n="b">sambhrāṁ<supplied reason="lost">ta-vi</supplied>gnā<lb n="6" break="no"/>rṇṇava-mandarād<supplied reason="omitted">r</supplied>iḥ<g type="danda">.</g></l>
                     <l n="c">śrī<seg met="+-++"><gap reason="lost" unit="character" quantity="4"/></seg>-kṣata-mañju-mūrttir</l>
                     <l n="d">vabhūva nārāyaṇadeva <supplied reason="lost">E</supplied>ṣaḥ<g type="ddanda">.</g></l>
                 </lg>
                 <lg n="5" met="upajāti">
                     <l n="a">nidhiḥ <supplied reason="lost">ka</supplied><lb n="7" break="no"/>lānāṁ bhavanaṁ guṇānāṁ</l>
