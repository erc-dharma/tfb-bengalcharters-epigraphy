                  <app loc="11"><lem>śamayitā</lem><rdg source="bib:Sircar1951-1952_01">ś<choice><sic>u</sic><corr>a</corr></choice>mayi<unclear>tā</unclear></rdg></app>
                   <app loc="11"><lem>a<choice><sic>v</sic><corr>n</corr></choice>aiṣīt·</lem><rdg source="bib:Sircar1951-1952_01">a<unclear>n</unclear>aiṣīt</rdg></app>
