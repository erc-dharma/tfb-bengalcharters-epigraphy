                 <pb n="1r"/><lb n="1"/> svasti<g type="danda">.</g>
                 <lg n="1" met="upajāti">
                     <l n="a">jayaty avidyā-hati-hetu-bhūta<supplied reason="omitted">ḥ</supplied></l>
